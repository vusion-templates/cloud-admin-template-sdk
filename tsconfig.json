{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "moduleResolution": "node",
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "template/**",
    "src/tests/tmp/**"
  ]
}